{   
    "set_mul_gpu":true,

    "convg_monitor":{
        "tol":1e-2,
        "max_iter":4
    },

    "train":
    {
        "n_epochs": 30,
        "batch_size": 128
    },

    "data":{
        "tr_to_val_split":0.8
    },

    "eval":
    {
        "batch_size": 128
    },

    "dyn_esn_flow":
    {
        "frame_dim":2, 
        "esn_dim":500, 
        "conn_per_neuron":10, 
        "spectral_radius":0.8, 
        "hidden_layer_dim":15, 
        "n_flow_layers":4, 
        "num_hidden_layers":2,
        "learning_rate":1e-3, 
        "model_type":"esn", 
        "use_toeplitz":true
    },
    "dyn_rnn_flow":
    {
        "frame_dim":2, 
        "encoding_dim":40, 
        "hidden_layer_dim":15, 
        "n_flow_layers":4, 
        "num_hidden_layers":1,
        "learning_rate":1e-4, 
        "model_type":"rnn",
        "use_toeplitz":false
    },
    "gmm_esn":
    {
        "frame_dim":2, 
        "esn_dim":500, 
        "conn_per_neuron":10, 
        "spectral_radius":0.8, 
        "hidden_layer_dim":15, 
        "num_components":5, 
        "learning_rate":1e-4, 
        "model_type":"esn",
        "use_toeplitz":true
    },
    "gmm_rnn":
    {
        "frame_dim":2, 
        "encoding_dim":40, 
        "hidden_layer_dim":30, 
        "num_components":5, 
        "learning_rate":1e-4, 
        "model_type":"rnn",
        "use_toeplitz":true
    }
}
